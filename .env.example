# Server configuration
NUTRIMATCH_SERVER_PORT=8080
NUTRIMATCH_SERVER_READ_TIMEOUT=5s
NUTRIMATCH_SERVER_WRITE_TIMEOUT=10s
NUTRIMATCH_SERVER_IDLE_TIMEOUT=120s
NUTRIMATCH_SERVER_SHUTDOWN_TIMEOUT=30s

# Database configuration
NUTRIMATCH_DATABASE_HOST=localhost
NUTRIMATCH_DATABASE_PORT=5432
NUTRIMATCH_DATABASE_USER=postgres
NUTRIMATCH_DATABASE_PASSWORD=mesika
NUTRIMATCH_DATABASE_DBNAME=nutrimatch
NUTRIMATCH_DATABASE_SSLMODE=disable
NUTRIMATCH_DATABASE_MAX_OPEN_CONNS=25
NUTRIMATCH_DATABASE_MAX_IDLE_CONNS=25
NUTRIMATCH_DATABASE_CONN_MAX_LIFETIME=15m

# JWT configuration
NUTRIMATCH_JWT_ACCESS_TOKEN_SECRET=your-access-token-secret-change-in-production
NUTRIMATCH_JWT_REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production
NUTRIMATCH_JWT_ACCESS_TOKEN_EXPIRY=15m
NUTRIMATCH_JWT_REFRESH_TOKEN_EXPIRY=7d
NUTRIMATCH_JWT_ISSUER=nutrimatch-api
NUTRIMATCH_JWT_AUDIENCE=nutrimatch-clients

# Logging configuration
NUTRIMATCH_LOGGING_LEVEL=info
NUTRIMATCH_LOGGING_FORMAT=json
NUTRIMATCH_LOGGING_OUTPUT=stdout
NUTRIMATCH_LOGGING_ERROR_OUTPUT=stderr

# Security configuration
NUTRIMATCH_SECURITY_ARGON_MEMORY=65536
NUTRIMATCH_SECURITY_ARGON_ITERATIONS=3
NUTRIMATCH_SECURITY_ARGON_PARALLELISM=2
NUTRIMATCH_SECURITY_ARGON_SALT_LENGTH=16
NUTRIMATCH_SECURITY_ARGON_KEY_LENGTH=32
NUTRIMATCH_SECURITY_RATE_LIMIT=100
NUTRIMATCH_SECURITY_RATE_LIMIT_WINDOW=1m
